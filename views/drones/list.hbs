<h2>Available drones</h2>

{{#each dronesArr}}
<section>
    <h3>{{this.name}}</h3>
    <p>
        Propellers: {{this.propellers}} <br />
        Max Speed:{{this.maxSpeed}}
        <a href="/drones/{{this._id}}/edit">Edit</a>
    </p>

     <form action="/drones/{{_id}}/delete" method="POST">
        <button>Delete</button>
    </form>
    
</section>
{{/each}}